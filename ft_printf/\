#include "ft_printf.h"

void	print_nchr(char c, int n)
{
	while (n > 0)
	{
		write(1, &c, 1);
		n--;
	}
}

int	c_handler(t_params *t, va_list arg)
{
	char	c;
	int		result_count;

	result_count = t->width - 1;
	c = (char)va_arg(arg, int);
	if (!t->minus)
		print_nchr(' ', result_count);
	write(1, &c, 1);
	if(t->minus)
		print_nchr(' ', result_count);
	return ((result_count > 0) ? t->width : 1);
}
